<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudyFocusMobApp.StatisticsPage"
             Title="StatisticsPage">
    <StackLayout VerticalOptions="Start" HorizontalOptions="Center">
        <Label Text="App Usage Time:"
               FontFamily="Lobster-Regular"
               FontSize="30"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               TextColor="#B3631F"
               Margin="0,40,0,0"/>
        <Label x:Name="appUsageLabel"
               FontFamily="Lobster-Regular"
               FontSize="25"
               TextColor="#B3631F"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
        <Label 
               Text="Pomodoros Finished:"
               FontFamily="Lobster-Regular"
               FontSize="30"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               TextColor="#B3631F"
               Margin="0,40,0,0"/>
        <Label x:Name="pomodorosLabel"
               FontFamily="Lobster-Regular"
               FontSize="25"
               TextColor="#B3631F"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
    </StackLayout>
</ContentPage>